    "dotenv": "^16.4.7",
    "ejs": "^3.1.10",
    "express": "^4.21.2",
    "googleapis": "^148.0.0",
    "nodemailer": "^6.10.0",
    "rotating-file-stream": "^3.2.6"
  },
